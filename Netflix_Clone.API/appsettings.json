{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "../Logs/NetflixClone-.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} {Level:u3} {Username} {Message:lj}{Exception}{NewLine}"
        }
      }
    ]
  },
  "Content": {
    "Movies": {
      "TargetDirectoryToCompressTo": "C:\\Netflix_Clone\\Netflix Clone\\Netflix_Clone.API\\wwwroot\\Content\\Movies\\CompressedMovies",
      "TargetDirectoryToSaveTo": "C:\\Netflix_Clone\\Netflix Clone\\Netflix_Clone.API\\wwwroot\\Content\\Movies"
    }
  }
}
